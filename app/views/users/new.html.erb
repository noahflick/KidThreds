<h1>Register User</h1>

<%= form_for @user do |f| %>
    <% flash.each do |key, msg| %>
        <div><%= msg %></div>
    <% end %>


    <p>Name: <%= f.text_field :name %></p>
    <p>Email: <%= f.email_field :email %></p>
    <p>Password: <%= f.password_field :password %></p>
    <p>Confirm Password:<%= f.password_field :password_confirmation %>
    <p>Image: <%= f.file_field :image %></p>

    <p><%= f.submit  "Register" %></p>
<% end %>
