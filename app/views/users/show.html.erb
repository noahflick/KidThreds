<div class ='container' id='userPage' >

<% if @user.image.present? %>
<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object" src=<%= @user.image.url(:thumb)%> alt="no img">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%=@user.name%>'s Items</h4>
  </div>
</div>
<% else %>
<h3><%=@user.name%>'s Items:</h3>
<% end %>
</div>

<div class="container">
  <div class = 'row'>
    <div class = 'col-xs-4'>description</div>
    <div class = 'col-xs-2'>size</div>
    <div class = 'col-xs-3'>gender</div>
  </div>
 <% @user.items.each do |item| %>
  <div class = 'row'>
    <div class = 'col-xs-4'><%= item.description %></div>
    <div class = 'col-xs-2'><%= item.size %></div>
    <div class = 'col-xs-3'><%= item.gender %></div>

    <div class = 'col-xs-3'><%= link_to "more info", item_path(item) %>
          <% if item.user == current_user%>
          | <%= link_to "edit", edit_item_path(item) %>
          | <%= link_to "delete", item_path(item), method: :delete, data: {confirm: "You sure?"} %>
    </div>
    <% end %>

  </div><br/>

<% end %>
</div>
