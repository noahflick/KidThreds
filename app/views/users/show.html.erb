











<div class ='container' id='userHead' >

<% if @user.image.present? %>
<div class="media">
  <div class="pull-left">
    <a href="#">
      <img class="media-object" src=<%= @user.image.url(:thumb)%> alt="no img">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%=@user.name%>'s Items</h4>
  </div>
</div>


<% else %>
  <h3><%=@user.name%>'s Items:</h3>
  <% end %>
</div>



<div class="container">

 <% @user.items.each do |item| %>

<div class='col-xs-12  myItem'>
  <div>
    <div class="thumbnail col-xs-2">
      <% if item.image_file_name != nil %>
      <%= image_tag item.image.url(:thumb), height: '100', alt: "no image"%>
      <% else %>
      <%= image_tag "mickeypants.jpg", size: '100' %>
      <% end %>
    </div>

    <div class='caption col-xs-4'>
      <h3><%= item.description %></h3>
      <p>Size: <%= item.size %></p>
      <p><%= item.gender %></p>
      <% if item.user %>
      <p>posted by: <a href= <%= user_path(item.user)%>><%= item.user.name %></a></p>
    <% else %>
    <br/>
    <% end %>
      <div class='col-xs-4'>
        <a href= <%= item_path(item) %> class='btn btn-primary btn-xs'>info</a>

        <% if item.user == current_user%>
          <%= link_to 'edit <i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_item_path(item), class: 'btn btn-success btn-xs' %>
          <a href= <%= item_path(item) %> data-method = 'delete' data-confirm = "Are you sure you want to delete this item?" class='btn btn-danger btn-xs'>delete</a>
          <% end %>
      </div>
    </div>
  </div>
</div>

  <div class = 'row'>
    <div class = 'col-xs-4'><%= item.description %></div>
    <div class = 'col-xs-2'><%= item.size %></div>
    <div class = 'col-xs-3'><%= item.gender %></div>

    <div class = 'col-xs-3'><%= link_to "more info", item_path(item) %>
          <% if item.user == current_user%>
          | <%= link_to "edit", edit_item_path(item) %>
          | <%= link_to "delete", item_path(item), method: :delete, data: {confirm: "You sure?"} %>
    </div>
    <% end %>

  </div><br/>

<% end %>
</div>
