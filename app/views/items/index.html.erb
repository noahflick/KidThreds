<div class ='container' id ='itemsBox'>
<h4>Recent Threds</h4>

<div class='row'>
<% @items.each do |item| %>

<div class='col-lg-3 col-md-4 col-sm-4 col-xs-12 itemCard'>
  <div class="thumbnail">
    <% if item.image_file_name != nil %>
      <%= image_tag item.image.url(:thumb), size: '100 x 100', alt: "no image"%>
    <% else %>
      <%= image_tag '<%= asset_path("mickeypants.jpg") %>', size: '100' %>
    <% end %>
    <div class='caption'>
      <h3><%= item.description %></h3>
      <p>Size: <%= item.size %></p>
      <p><%= item.gender %></p>
      <p>posted by: <a href= <%= user_path(item.user)%>><%= item.user.name %></a></p>
      <p><a href= <%= item_path(item) %> class='btn btn-primary btn-xs'>info</a>
      <% if item.user == current_user%>
      <%= link_to 'edit <i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_item_path(item), class: 'btn btn-success btn-xs' %>
      <a href= <%= item_path(item) %> data-method = 'delete' data-confirm = "Are you sure you want to delete this item?" class='btn btn-danger btn-xs'>delete</a></p>
      <% end %>
    </div>
  </div>
</div>


<% end %>

</div>

