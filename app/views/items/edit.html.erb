<div class = 'container'>
<h3>Edit your Item</h3>

<%= form_for @item do |f| %>
    <% flash.each do |key, msg| %>
        <div><%= msg %></div>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <p>Size: <%= f.text_field :size %></p>

    <p>Gender:
    <%= f.select :gender, [['gender'],["Boys\'",'Boy\'s'],['Girls\'','Girls\''],['Unisex','Unisex']] %>
    </p>

    <%= f.submit  "Post" %>
<% end %>
</div>

