body.items {
 background: url('<%= asset_path("yellkids.jpg") %>') no-repeat center center;
 background-size: cover;
 background-attachment: fixed;
}

body.items.index {
  background: url('<%= asset_path("crate.jpg") %>') no-repeat center center;
  background-size: cover;
  background-attachment: fixed;
}

body.items.new {
  background: url('<%= asset_path("naturekids.jpg") %>') no-repeat center center;
  background-size: cover;
  background-attachment: fixed;
  background-position: 88% 100%;

}

